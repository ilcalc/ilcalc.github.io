{:source-paths
 ["src"
  "test"]

 :dependencies
 [[reagent "1.0.0"]]

 :builds
 {:app {:target :browser
        :output-dir "public/dev/js"
        :asset-path "/dev/js"
        :modules {:main {:init-fn il.core/main}}}
  :test {:target    :browser-test
         :test-dir  "public/test"
         :devtools  {:http-port          8021
                     :http-root          "public/test"}}}

 :dev-http {8000 {:roots ["public/dev" "public"]}}}
